<!-- SURVEY 1 -->

<% if @survey1 %>

<h1 class="title">Let's get some lunch!</h1>
<% if @info != nil %>
<p class="surveyDetails">In <%= @info.location %></p>
<p class="surveyDetails">Survey sent by: <%= @info.name %></p>
<% end %>

<%= form_for(:response, url: crunch_path, method: :post) do |question| %>
  <div class="container survey1-container">
    <div class="col-md-3"></div>
    <div class="col-md-2">
      <%= question.label "Cuisine" %></br>
      <div class="drop-options">
      <%= question.select :question1, 
      options_for_select(%w[Thai Chinese Mexican Sushi Burgers Korean Indian FoodTruck FastFood]) %></br>
      </div>
    </div>

    <div class="col-md-2">
      <%= question.label "Distance" %></br>
      <div class="drop-options">
      <%= question.select :question2, 
      options_for_select(%w[walking short-drive long-drive]) %></br>
      </div>
    </div>

    <div class="col-md-2">
      <%= question.label "Price" %></br>
      <div class="drop-options">
      <%= question.select :question3, 
      options_for_select(%w[$ $$ $$$ $$$$]) %></br>
      </div>
    </div>

    <div class="col-md-3"></div>
  </div>

  <div class="container survey-submit">
  <div class="col-md-5"></div>
  <div class="col-md-2">
  <%= question.submit "submit", :id => "survey1-submit-btn" %>
  </div>
  <div class="col-md-5"></div>
  </div>

<% end %>
<% end %>


