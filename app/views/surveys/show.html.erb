<h1>Lets get some damn lunch!</h1>
<% if @info != nil %>
<h3>Survey sent by <%= @info.name %></h3>

<h3>Will search in the <%= @info.location %> area</h3>
<% end %>

<% if @survey1 %>
<%= form_for(:response, url: crunch_path, method: :post) do |question| %>

  <%= question.label :question1 %>
  <%= question.select :question1, 
  options_for_select(%w[Thai Chinese Mexican Sushi Burgers Korean Indian FoodTruck FastFood]) %></br></br>

  <%= question.label :question2 %>
  <%= question.select :question2, 
  options_for_select(%w[walking short-drive long-drive]) %></br></br>

  <%= question.label :question3 %>
  <%= question.select :question3, 
  options_for_select(%w[$ $$ $$$ $$$$]) %></br></br>

  <%= question.submit "submit responses!", :id => "survey2" %>

<% end %>
<% end %>

<% if @survey2 %>
  <h1 id="title">Survey 2</h1>

  <%= form_for(:response2, url: crunch_two_path, method: :post) do |question| %>

    <p id="test"></p>
    <%= question.check_box :option1, {}, "venueOne", 0 %>

    <p id="test2"></p>
    <%= question.check_box :option2, {}, "venueTwo", 0 %>

    <p id="test3"></p>
    <%= question.check_box :option3, {}, "venueThree", 0 %> 
 
  <%= question.submit "submit responses!", :id => "survey2" %>

<% end %>
<% end %>

<% if @final_section %>
<h1>FINAL</h1>

<% end %>


